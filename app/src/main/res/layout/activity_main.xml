<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="@dimen/zero_dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/zero_dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/text_entran"
            android:textColor="@color/gray"
            android:textSize="@dimen/big_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_cont_entran"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/zero_dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/initial_count_entran"
            android:textColor="@color/gray"
            android:textSize="@dimen/extra_big_size"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/zero_dp"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/btn_entran"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/gray"
                android:text="@string/text_btn"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/zero_dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/zero_dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/text_salen"
            android:textColor="@color/gray"
            android:textSize="@dimen/big_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_cont_salen"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/zero_dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/initial_count_salen"
            android:textColor="@color/gray"
            android:textSize="@dimen/extra_big_size"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/zero_dp"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/btn_salen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/gray"
                android:text="ADD"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>